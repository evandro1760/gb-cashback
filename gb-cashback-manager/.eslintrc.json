{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:sonarjs/recommended"
    ],
    "plugins": [
        "sonarjs"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "indent": [
            "error",
            4
        ],
        "import/extensions": [
            0,
            {
                "<js>": "always"
            }
        ],
        "no-unsafe-finally": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true,
                "optionalDependencies": false,
                "peerDependencies": false
            }
        ]
    }
}